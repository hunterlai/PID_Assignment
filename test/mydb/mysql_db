create database testforsql;

/*註冊會員 balance餘額 auth狀態*/
create table player(
    userId int primary key auto_increment not null,
    userName varchar(20) not null,
    userPassword int not null,
    balance int not null default '0',
    auth varchar(10) not null
);

insert into player (userName,userPassword,balance,auth) 
values ('root',12345,100,'root'),('admin',54321,50,'admin'),('qwe',123,10000,'VorC');

/*產品*/
create table products(
    prodId int primary key auto_increment not null,
    prodName varchar(20) not null,
    unitPrice int not null,
    unitStock int not null,
    display int(1) not null DEFAULT '1'
);
insert into products (prodName,unitPrice,unitStock,display)
values ('w shoes',1000,10,1),('b shoes',2000,100,1),('g shoes',500,50,1),('b shoes',10000,10,1);

/*訂單*/
create table orders(
    orderId int primary key auto_increment not null,
    userId int not null,
    orderDate date,
    foreign key (userId) references player(userId)   
);
    
/*訂單明細*/
create table order_detail(
    orderId int not null,
    prodId int not null,
    qty int,
    foreign key (orderId) references orders(orderId),
    foreign key (prodId) references products(prodId)
);
